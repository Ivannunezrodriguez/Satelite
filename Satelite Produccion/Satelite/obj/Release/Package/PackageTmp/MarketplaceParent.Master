    <div id="div_cesta" class ="div_cesta" style="display: none;">
        <button id="Button2" type="button" onclick="$('#div_cesta').css('display', 'none')" style=" text-align:right; position:absolute; top:10px; left:96%; border-style:none; background-color:transparent;" class="pull-right text-muted " >
